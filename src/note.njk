{% extends "layouts/base.njk" %}

{% from "macros/cards.njk" import note_card %}

{% block content %}
<section class="card-columns">
    <div>Explanation!</div>
    <div>
        {% for note in collections.notes | newestEntries(10) %}
            {{ note_card(note = note)}}
        {% endfor %}
    </div>
    <div>
        <ul>
            {% for year, notes in collections.notes | byYear %}
                <li>
                    <a href="/note/{{ year }}">{{ year }}</a>:
                    {{ notes | length }}
                </li>
            {% endfor %}
        </ul>
    </div>
</section>
{% endblock content %}