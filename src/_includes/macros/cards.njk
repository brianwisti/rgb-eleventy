{% from "macros/date_stamp.njk" import date_stamp %}

{% macro article_card(article, card_content, class_name="article") %}
    <section class="card {{ class_name }}">
        <header>
            <strong>
                <a href="{{ article.url | url }}">{{ article.data.title }}</a>
            </strong>
            <p>{{ date_stamp(article.data.date) }}</p>
        </header>

        {{ card_content | safe }}
        <footer>
            {% for tag in article.data.tags %}
                <span>{{ tag }}</span>
            {% endfor %}
        </footer>
    </section>
{% endmacro %}

{% macro note_card(note) %}
    {{ article_card(
        article = note,
        class_name = "note",
        card_content = note.templateContent
    ) }}
{% endmacro %}

{% macro post_card(post) %}
    {{ article_card(
        article = post,
        class_name = "post",
        card_content = post.data.description
    ) }}
{% endmacro %}